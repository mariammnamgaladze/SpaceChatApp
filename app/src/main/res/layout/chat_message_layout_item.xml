<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_14dp"
    android:layout_marginTop="@dimen/dimen_10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/mediumMyriadGeo_Normal"
        android:layout_marginEnd="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/bkg_chat_message"
        android:backgroundTint="@color/purple_light"
        android:maxWidth="300dp"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@id/bigDotImageView"
        app:layout_constraintEnd_toEndOf="@id/bigDotImageView"
        tools:text="@tools:sample/lorem" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/smallDotImageView"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:src="@drawable/dot"
        android:tint="@color/purple_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bigDotImageView"
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/dot"
        android:tint="@color/purple_light"
        app:layout_constraintBottom_toTopOf="@id/smallDotImageView"
        app:layout_constraintEnd_toStartOf="@id/smallDotImageView" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/smallMyriadGeo_Normal"
        android:textColor="@color/neutral_05_lightest_grey"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="@id/messageTextView"
        app:layout_constraintTop_toBottomOf="@id/messageTextView"
        tools:text="23:00 სამშ" />
</androidx.constraintlayout.widget.ConstraintLayout>