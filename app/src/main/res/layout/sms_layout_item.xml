<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:scaleX="1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/smallDotIV"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_0dp"
        android:src="@drawable/dot"
        android:tint="@color/purple_100"
        android:translationX="@dimen/dimen_15dp"
        android:translationY="@dimen/dimen_6dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@+id/BigDotIV"
        app:layout_constraintTop_toBottomOf="@+id/BigDotIV" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/BigDotIV"
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:src="@drawable/dot"
        android:tint="@color/purple_100"
        android:translationX="@dimen/dimen_5dp"
        android:translationY="@dimen/dimen_5dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@+id/smsTV"
        app:layout_constraintTop_toTopOf="@+id/smsTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/smsTV"
        style="@style/mediumMyriadGeo_Normal"
        android:background="@drawable/bkg_sms"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:backgroundTint="@color/purple_100"
        android:scaleX="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "@tools:sample/lorem" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateTV"
        style="@style/smallMyriadGeo_Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1"
        android:translationX="@dimen/dimen_30dp"
        app:layout_constraintEnd_toStartOf="@+id/smallDotIV"
        app:layout_constraintStart_toStartOf="@+id/smsTV"
        app:layout_constraintTop_toBottomOf="@+id/smsTV"
        tools:text="14.04" />

</androidx.constraintlayout.widget.ConstraintLayout>