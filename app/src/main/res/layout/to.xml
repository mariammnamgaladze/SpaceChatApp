<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_120dp"
    android:layout_marginTop="@dimen/dimen_20dp"
    android:layout_marginEnd="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/smsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_1dp"
        android:background="@drawable/sms_background"
        android:backgroundTint="@color/purple_100"
        android:padding="@dimen/dimen_16dp"
        android:textColor="@color/darkest_gray"
        android:textSize="@dimen/sms_txt_size"
        app:layout_constraintBottom_toBottomOf="@id/bigDotIV"
        app:layout_constraintEnd_toEndOf="@id/bigDotIV"
        tools:text="@string/to_test_text" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dotIv"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:src="@drawable/dot"
        android:tint="@color/purple_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bigDotIV"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_0dp"
        android:src="@drawable/dot"
        android:tint="@color/purple_100"
        app:layout_constraintBottom_toTopOf="@id/dotIv"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/dotIv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:textColor="@color/gray_400"
        android:textSize="@dimen/date_txt_size"
        app:layout_constraintEnd_toEndOf="@id/smsTV"
        app:layout_constraintTop_toBottomOf="@id/smsTV"
        tools:text="@string/date_test_text" />

</androidx.constraintlayout.widget.ConstraintLayout>